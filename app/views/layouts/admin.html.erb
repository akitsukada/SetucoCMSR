<!DOCTYPE html>
<html>
    <head>
        <%= render :partial => "admin/shared/html_header" %>
        <%= stylesheet_link_tag 'base' %>

        <%  @add_css.flatten.uniq.each do |css| %>
        <%= stylesheet_link_tag css %>
        <%  end %>

        <%= javascript_include_tag :defaults %>
        <%= javascript_include_tag 'shared/jquery.updnWatermark.js' %>

        <%  @add_js.flatten.uniq.each do |js| %>
        <%= javascript_include_tag js %>
        <%  end %>

        <%= javascript_include_tag 'shared/keyword.js' %>
        <%= javascript_include_tag 'admin/admin' %>
        <%= csrf_meta_tag %>
        <title><%= @subtitle.last[:name] + " : " if @subtitle %>SetucoCMSR</title>
    </head>
    <body class="soria">
        <!-- container START -->
        <div id="container">
<noscript>
    <p><span class="attentionMessage">現在JavaScriptが無効になっています。一部の機能が正しく動作しません。<br />全ての機能を利用するためにはJavaScriptを有効にしてください。</span></p>
</noscript>
            <!-- header START -->
            <div id="header">
                <%= render :partial => 'admin/shared/header' %>
            </div>
            <!-- header END -->

            <!-- content START -->
            <div id="content">
                <!-- mainContent START -->
                <div id="mainContent">
                    <!-- mainContentInner START -->
                    <div id="mainContentInner">
                        <%= render :partial => 'admin/shared/breadcrumbs' if @breadcrumbs %>
                        <%= yield %>
                    </div>
                    <!-- mainContentInner END -->
                </div>
                <!-- mainContent END -->
                <!-- sidebar START -->
                <div id="sidebar">
                    <%= render :partial => 'admin/shared/navi' %>
                </div>
                <!-- sidebar END -->
            </div>
            <!-- content END -->
            <%= render :partial => 'admin/shared/footer' %>
        </div>
        <!-- container END -->

    </body>
</html>
